{% layout 'layout.liquid' %}
{% block content %}

  <div class="container-sm con-pad">
    <h2>All my saved locations</h2>
    <div>
      {% for location in locations %}
      {{ location.search }} </br>
      <a href="/location/{{ location.search }}" class="btn btn-light button">View Current</a>
      {% if location.owner == userId  %}
      <form action="/mylocations/{{ location.id }}?_method=DELETE" method="POST">
        <input type="submit" value="DELETE" class="btn btn-light button">
      </form>
      {% endif %}
      {% endfor %}
    </div>
  </div>

{% endblock %}