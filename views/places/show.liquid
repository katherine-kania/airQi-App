{% layout 'layout.liquid' %}
{% block content %}
<div class="container-md">
    <article>
        <h2>
            {{ place.title }} -
            {% if place.ready %}
            Ready
            {% else %}
            Not Ready
            {%endif%}
        </h2>
        <h3>Amount: {{ place.amount }}</h3>
        <h6>Body: {{ place.body }}</h6>
        {% if place.owner == userId %}
        <div class="btn-group">

            <a href="/places/{{ place.id }}/edit" class="btn btn-primary">Edit</a>
            <form action="/places/{{ place.id }}?_method=DELETE" method="POST">
                <input type="submit" value="Delete" class="btn btn-danger">
            </form>
        </div>
        {% endif %}
    </article>
</div>
{% endblock %}