{% layout 'layout.liquid'%}
{% block content %}
<div class="container-sm con-pad">
    <h2 class="display-6">Daily Data Saves</h2>
    <div class="row">
        {% for localeDayData in localeDayDatas %}
            <div class="card" style="width: 18rem;">
            
                <h5 class="card-header">
                    {{ localeDayData.name}}, 
                    {% if localeDayData.region == empty %}
                        {{ localeDayData.country}} 
                    {% else %}
                        {{ localeDayData.region}} 
                {% endif %}
                </h5>

                <div class="card-body">
                    <h5 class="card-title">
                       {% if localeDayData.usEpaIndex == 1 %}
                <h4 style="background-color: rgb(154, 249, 12)">
                    Good
                </h4>
                <div style="background-color: rgb(154, 249, 12)")> 
                    US EPA Index: {{ localeDayData.usEpaIndex }}
                </div>
            {% endif %}

            {% if localeDayData.usEpaIndex == 2 %}
                <h4 style="background-color: yellow">
                    Moderate
                </h4>
                <div style="background-color: yellow" >
                    US EPA Index: {{ localeDayData.usEpaIndex }}
                </div>
            {% endif %}

            {% if localeDayData.usEpaIndex == 3 %}
                <h4 style="background-color: orange">
                    Unhealthy for Sensitive Groups
                </h4>
                <div style="background-color: orange">
                    US EPA Index: {{ localeDayData.usEpaIndex }}
                </div>
            {% endif %}

            {% if localeDayData.usEpaIndex == 4 %}
            <h4 style="background-color: red">
                Unhealthy
            </h4>
            <div style="background-color: red)">
                US EPA Index: {{ localeDayData.usEpaIndex }}
            </div>
            {% endif %}

            {% if localeDayData.usEpaIndex == 5 %}
            <h4 style="background-color: purple">
                Very Unhealthy
            </h4>
            <div style="background-color: purple">
                US EPA Index: {{ localeDayData.usEpaIndex }}
            </div>
            {% endif %}

            {% if localeDayData.usEpaIndex == 6 %}
            <h4 style="background-color: maroon">
                Hazardous
            </h4>
            <div style="background-color: maroon">
                US EPA Index: {{ localeDayData.usEpaIndex }}
            </div>
            {% endif %}
            </h5>
                <p class="card-text"> 

                  </p>
                <a href="localeDayData/{{ localeDayData.id }}" class="btn btn-light button">
                    View </br>{{ localeDayData.createdAt | date: "%m-%d-%Y %H:%M"  }}
                </a>
                <form action="/localeDayData/{{ localeDayData.id }}?_method=DELETE" method="POST">
                    <input type="submit" value="delete" class="btn btn-light button">
                </form>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}